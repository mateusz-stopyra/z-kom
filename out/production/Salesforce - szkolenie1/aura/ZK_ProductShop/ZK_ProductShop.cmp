<aura:component description="ZK_ProductShop" controller="ZK_ProductShopController" implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId, forceCommunity:availableForAllPageTypes"
                access="global">

    <aura:attribute name="userProfile" type="Object"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <aura:if isTrue="{!v.userProfile.Name == 'Custom Customer Community User' || v.userProfile.Name == 'System Administrator'}">
        <div>
            <c:ZK_ProductShopNav/>
        </div>
    </aura:if>
    <div class="slds-m-top_medium">
        <c:ZK_ProductSearch destination="{!v.userProfile.Name != 'z-kom Profile' ? 'client' : 'guest'}" size="small"/>
    </div>
</aura:component>
