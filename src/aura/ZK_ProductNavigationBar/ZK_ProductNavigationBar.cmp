<aura:component description="ZK_ProductNavigationBar">

    <aura:registerEvent name="newProduct" type="c:ZK_NewProduct"/>

    <lightning:layout class="slds-page-header no-b-rounded slds-page-header_object-home slds-m-around_none">

        <lightning:layoutItem>
            <lightning:icon iconName="standard:product" alternativeText="Products"/>
        </lightning:layoutItem>

        <lightning:layoutItem padding="horizontal-small">
            <div class="page-section page-header">
                <h1 class="slds-text-heading_label">{!$Label.c.ZK_Products}</h1>
                <h2 class="slds-text-heading_medium">All {!$Label.c.ZK_Products}</h2>
            </div>
        </lightning:layoutItem>

        <lightning:layoutItem class="right-align" alignmentBump="left">
            <lightning:button iconPosition="right" class="right-align" variant="neutral" onclick="{!c.onNewProduct}">{!$Label.c.ZK_NewProduct}</lightning:button>
        </lightning:layoutItem>

    </lightning:layout>

</aura:component>
