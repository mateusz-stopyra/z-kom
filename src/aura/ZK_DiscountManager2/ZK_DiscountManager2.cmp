<aura:component description="ZK_DiscountManager2" controller="ZK_ProductController">

    <aura:attribute name="products" type="Product2[]"/>
    <aura:attribute name="selectedProducts" type="Map"/>
    <aura:attribute name="percent" type="Integer" default="5"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <lightning:card title="Form">
        <c:ZK_DiscountProductForm selectedProducts="{!v.selectedProducts}" percent="{!v.percent}"/>
    </lightning:card>
    <lightning:card title="Products">
        <c:DiscountProductList products="{!v.products}" selectedProducts="{!v.selectedProducts}" percent="{!v.percent}"/>
    </lightning:card>

</aura:component>
